<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:animateLayoutChanges="true"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF"
    app:contentPadding="3dp"
    android:weightSum="2">
    <!--<android.support.constraint.ConstraintLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="50dp">-->

    <!--</android.support.constraint.ConstraintLayout>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4.3">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:orientation="horizontal"
            android:weightSum="4.7">
<ImageView
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:id="@+id/productimageimageview"
    android:src="@drawable/ic_default_img"
    android:layout_weight="0.8"/>
            <TextView
                android:id="@+id/customer_monthly_list_productname"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.7"
                android:text="@string/marketname"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />
            <CheckBox
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/monthly_checklist"
                android:layout_weight="0.5"/>
            <Button
    android:layout_width="0dp"
    android:id="@+id/edit_mylist_button"
    android:layout_height="match_parent"
    android:layout_weight="0.7"
    android:background="@drawable/roundbutton"
    android:text="Edit"
    android:textSize="18dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Quantity:"
                android:textSize="18dp"
                android:layout_weight="0.8"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                android:id="@+id/quantity_textView"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Measure Type:"
                android:textSize="15dp"
                android:layout_weight="1.1"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/measure_textView"
                android:layout_weight="1"
                />

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:text="Amount:"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:id="@+id/item_amount_mylist"
            android:textSize="18dp"/>
        <ImageView
            android:layout_width="0dp"
            android:id="@+id/clear_mylist_imageview"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_delete_item">

        </ImageView>
            <!--android:background="@color/sellquick_grey"/>-->
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="Product Availability Status:"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="18dp"
                android:id="@+id/productAvailabilty_status"/>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
